{
  "manifest_version": 3,
  "name": "CurbYourCarbon",
  "version": "2.0.0",
  "description": "Track the carbon footprint of your browsing activity on any website",
  "permissions": ["storage", "tabs", "activeTab"],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "https://api.electricitymaps.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "content-scripts/tracker-base.js",
        "content-scripts/universal-tracker.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "128": "assets/icons/icon128.png"
  }
}
